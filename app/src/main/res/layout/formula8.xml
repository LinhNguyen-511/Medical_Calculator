<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/formula1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF">

    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />



    <!-- add math formulas using MathJax-->
    <io.github.sidvenu.mathjaxview.MathJaxView
        android:id="@+id/formula1Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBar"
        android:background="#FFFFFF"

        />


    <TextView
        android:id="@+id/SC"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@+id/formula1Text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Serium creatine (mmol/l)"
        android:textColor="#1DE9B6" />

    <EditText
        android:id="@+id/SCIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formula1Text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/SC"
        android:layout_toRightOf="@+id/SC"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter serium creatine"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#7C7C7C"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/SU"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@+id/SC"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Serum urea (mmol/l)"
        android:textColor="#1DE9B6" />

    <EditText
        android:id="@+id/SUIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SCIn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/SU"
        android:layout_toRightOf="@+id/SU"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Serum urea (mmol/l)"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#7C7C7C"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/UC"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@+id/SU"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Urine creatine (mmol/l)"
        android:textColor="#1DE9B6" />

    <EditText
        android:id="@+id/UCIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SUIn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/UC"
        android:layout_toRightOf="@+id/UC"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Urine creatine "
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#7C7C7C"
        android:textSize="14sp"
        android:importantForAutofill="no" />
    <TextView
        android:id="@+id/UU"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@+id/UC"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Urine Urea (mmol/l)"
        android:textColor="#1DE9B6" />

    <EditText
        android:id="@+id/UUIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UCIn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/UU"
        android:layout_toRightOf="@+id/UU"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Urine Urea"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#7C7C7C"
        android:textSize="14sp"
        android:importantForAutofill="no" />



    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/UU"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#1DE9B6"
        android:shadowColor="#1DE9B6"
        android:text="@string/calculate"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#1DE9B6"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/FEU"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_below="@id/button"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Fractional ureum excretion"
        android:textColor="#1DE9B6" />

    <TextView
        android:id="@+id/result"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_below="@id/button"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/FEU"
        android:layout_toRightOf="@id/FEU"
        android:gravity="center"
        android:text="@string/result"
        android:textColor="#7C7C7C" />


</RelativeLayout>